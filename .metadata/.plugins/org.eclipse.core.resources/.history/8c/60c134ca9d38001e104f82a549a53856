package Solid_aula2;

public class cartao_de_credito {
	
	public String nome;
	public String numero;
	public String data_validade;
	public double ValorCobrado;
	
	
	private boolean ValidadaNome() {
		boolean resultado =false;
		//chamar o endpoint da api da operadora die cart√£o de credito 
		if (this.nome.equalsIgnoreCase("Pedro de lara")){
			resultado = true;
				
		}else {
			resultado = false;
		}
		return resultado;
	}
	private boolean ValidadaNumero() {
		boolean resultado =false;
		
		if (this.numero.equalsIgnoreCase("1234")){
			resultado = true;
				
		}else {
			resultado = false;
		}
		return resultado;
	}
	private boolean ValidadaData() {
		boolean resultado =false;
		
		if (this.data_validade.equalsIgnoreCase("08/2030")){
			resultado = true;
				
		}else {
			resultado = false;
		}
		return resultado;
	}	

}
